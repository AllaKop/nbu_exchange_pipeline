{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AllowS3BucketActions",
      "Effect": "Allow",
      "Action": [
        "s3:ListBucket",
        "s3:GetBucketLocation"
      ],
      "Resource": "arn:aws:s3:::nbu-exchange-bronze"
    },
    {
      "Sid": "AllowS3ObjectActionsWithProjectTag",
      "Effect": "Allow",
      "Action": [
        "s3:PutObject",
        "s3:GetObject",
        "s3:DeleteObject"
      ],
      "Resource": "arn:aws:s3:::nbu-exchange-bronze/*",
      "Condition": {
        "StringEquals": {
          "s3:RequestObjectTag/project_name": "nbu-exchange"
        }
      }
    },
    {
      "Sid": "AllowTaggingS3Objects",
      "Effect": "Allow",
      "Action": [
        "s3:PutObjectTagging",
        "s3:DeleteObjectTagging"
      ],
      "Resource": "arn:aws:s3:::nbu-exchange-bronze/*"
    }
  ]
}