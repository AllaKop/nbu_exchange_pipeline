{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AllowCreateRoleWithProjectTag",
      "Effect": "Allow",
      "Action": [
        "iam:CreateRole"
      ],
      "Resource": "*",
      "Condition": {
        "StringEquals": {
          "aws:RequestTag/project_name": "nbu-exchange"
        }
      }
    },
    {
      "Sid": "AllowTaggingRoles",
      "Effect": "Allow",
      "Action": [
        "iam:TagRole",
        "iam:UntagRole"
      ],
      "Resource": "*"
    },
    {
      "Sid": "AllowAllActionsOnTaggedRoles",
      "Effect": "Allow",
      "Action": [
        "iam:PassRole",
        "iam:DeleteRole",
        "iam:AttachRolePolicy",
        "iam:DetachRolePolicy",
        "iam:GetRole",
        "iam:UpdateAssumeRolePolicy"
      ],
      "Resource": "*",
      "Condition": {
        "StringEquals": {
          "aws:ResourceTag/project_name": "nbu-exchange"
        }
      }
    }
  ]
}