{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AllowCreateSecretWithProjectTag",
      "Effect": "Allow",
      "Action": [
        "secretsmanager:CreateSecret"
      ],
      "Resource": "*",
      "Condition": {
        "StringEquals": {
          "aws:RequestTag/project_name": "nbu-exchange"
        }
      }
    },
    {
      "Sid": "AllowTaggingSecrets",
      "Effect": "Allow",
      "Action": [
        "secretsmanager:TagResource",
        "secretsmanager:UntagResource"
      ],
      "Resource": "*"
    },
    {
      "Sid": "AllowAllActionsOnTaggedSecrets",
      "Effect": "Allow",
      "Action": "secretsmanager:*",
      "Resource": "*",
      "Condition": {
        "StringEquals": {
          "aws:ResourceTag/project_name": "nbu-exchange"
        }
      }
    }
  ]
}